<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="cs.dal.eventbookapp.AttachNotes"
    tools:showIn="@layout/activity_attach_notes">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/txtInputLay"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app:hintAnimationEnabled="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="17dp"
        android:layout_marginTop="27dp">
        <android.support.design.widget.TextInputEditText
            android:id="@+id/txtInput"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="top"
            android:maxLines="20"
            android:hint="Add your notes here" />

    </android.support.design.widget.TextInputLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textColor="@color/GhostWhite"
        android:backgroundTint="@color/MediumAquamarine"
        android:layout_alignBottom="@+id/txtInputLay"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp"
        android:src="@android:drawable/ic_menu_save" />


</RelativeLayout>

