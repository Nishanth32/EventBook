<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login"
    tools:context="cs.dal.eventbookapp.Registeration">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:id="@+id/createAccountTV"
        android:textAllCaps="true"
        android:textStyle="bold|italic"
        android:textSize="25sp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="25sp"/>

    <View
        android:layout_width="300dp"
        android:layout_height="2dp"
        android:background="@color/Orange"
        android:id="@+id/orangeline"
        android:layout_below="@+id/createAccountTV"
        android:layout_centerHorizontal="true"/>

    <EditText
        android:id="@+id/Name"
        android:textColor="@color/white"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_marginTop="100dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_password"
        android:ems="10"
        android:hint="FullName"
        android:textColorHint="@color/white"
        android:inputType="textPersonName"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/Regemail"
        android:layout_alignStart="@+id/Regemail" />

    <EditText
        android:id="@+id/Regemail"
        android:textColor="@color/white"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="29dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_action_email"
        android:ems="10"
        android:hint="Email ID"
        android:textColorHint="@color/white"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/Rpassword"
        android:textColor="@color/white"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:background="#11000000"
        android:layout_marginTop="31dp"
        android:drawableLeft="@drawable/ic_action_password1"
        android:ems="10"
        android:hint="Password"
        android:textColorHint="@color/white"
        android:inputType="textPassword"
        android:layout_below="@+id/Regemail"
        android:layout_alignLeft="@+id/Regemail"
        android:layout_alignStart="@+id/Regemail" />

    <android.support.v7.widget.CardView
        android:layout_width="280dp"
        android:layout_height="40dp"
        app:cardBackgroundColor="@color/Orange"
        app:cardCornerRadius="25dp"
        android:id="@+id/signup"
        android:layout_below="@+id/checkBoxAdmin"
        android:layout_alignStart="@+id/textView3"
        android:layout_marginTop="18dp">

        <RelativeLayout
            android:id="@+id/relLayoutSignUp"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Sign Up"
                android:textColor="#FFFFFF"
                android:textSize="16dp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <EditText
        android:id="@+id/Rconfirmpassword"
        android:textColor="@color/white"
        android:layout_width="280dp"
        android:layout_height="40dp"
        android:layout_below="@+id/Rpassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#11000000"
        android:hint="ConfirmPassword"
        android:textColorHint="@color/white"
        android:drawableLeft="@drawable/ic_action_password1"
        android:ems="10"
        android:inputType="textPassword" />

    <CheckBox
        android:id="@+id/checkBoxAdmin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="21dp"
        android:text=" Allow me to Organize Events"
        android:textSize="15sp"
        android:textColor="@color/white"
        android:layout_below="@+id/Rconfirmpassword"
        android:layout_alignStart="@+id/Rconfirmpassword" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already have an account?  "
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:textColor="@color/white"
        android:id="@+id/textView3"
        android:layout_below="@+id/signup"
        android:layout_alignStart="@+id/orangeline"
        android:layout_marginTop="78dp" />

    <Button
        android:id="@+id/signIn"
        android:layout_width="wrap_content"
        android:layout_height="35sp"
        android:background="@color/Orange"
        android:text="Sign in"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="23sp"
        android:textStyle="bold|italic"
        android:layout_alignTop="@+id/textView3"
        android:layout_toEndOf="@+id/createAccountTV" />

</RelativeLayout>